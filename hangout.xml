<?xml version="1.0" encoding="UTF-8" ?>
<Module>
  <ModulePrefs title="Hangout Whisper for Google+">
    <Require feature="rpc"/>
    <Require feature="views"/>
  </ModulePrefs>
  <Content type="html">
<![CDATA[
<script src="//hangoutsapi.talkgadget.google.com/hangouts/api/hangout.js?v=0.1"></script>
<link rel="stylesheet" type="text/css" href="http://mohamedmansour.com/sandbox/multiple-convo-hangouts/hangout.css" />

<div id="main-app">
  <h1>Hangout Whisper for Google+</h1>
  <div>
    <p id="sublabel">Activate Whisper:</p> 
    <div class="toggle">
      <label class="" id="lblActivate">
      <input type="checkbox" id="btnActivate"/>
        <span class="on">on</span>
        <span class="spacer"></span>
        <span class="off">off</span>
      </label>
    </div>
    <div id="details">
      <strong>For all other participants, you may mute video or volume:</strong>
      <p>
        <label for="btnVideo">Mute Video:</label>
        <input type="checkbox" id="btnVideo"/>
      </p>
      <p>
        <label for="btnAudio">Mute Audio:</label>
        <input type="checkbox" id="btnAudio"/>
      </p>
      <p style="display:none">
        <label for="rangeVolume">Volume Level (Disabled, not working):</label>
        <input id="rangeVolume" type="range" min="0" max="10" value="1" />
      </p>
    </div>
  </div>
</div>
<div id="footer">
  By +<a href="https://plus.google.com/116805285176805120365/about">Mohamed Mansour</a>
</div>
<script src="http://mohamedmansour.com/sandbox/multiple-convo-hangouts/hangout.js"></script>
]]>
  </Content>
</Module>
